<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient
                android:startColor="#d64157"
                android:endColor="#df455b" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <solid android:color="#f84f68" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>
