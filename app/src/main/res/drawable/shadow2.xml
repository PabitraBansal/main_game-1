<?xml version="1.0" encoding="utf-8"?>
<!-- Gray shadow. -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item
        android:left="3dp"
        android:top="5dp">
        <shape>
            <gradient
                android:startColor="#993bbf"
                android:endColor="#b441e2" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- White foreground.  -->
    <item
        android:bottom="5dp"
        android:right="3dp">
        <shape>
            <solid android:color="#c04bef" />
            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>